{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "npm",
			"type": "shell",
			"args": [
				"run",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				{
					"owner": "typescript",
					"fileLocation": "relative",
					"pattern": [
						{
							"regexp": "^.*\\sin\\s(.*)$",
							"file": 1
						},
						{
							"regexp": "^\\((\\d+),(\\d+)\\):\\s(.*)\\s(.*):\\s(.*)$",
							"line": 1,
							"column": 2,
							"severity": 3,
							"code": 4,
							"message": 5
						}
					]
				},
				{
					"owner": "less",
					"fileLocation": "relative",
					"pattern": [
						{
							"regexp": "^.*$",
							"message": 0
						},
						{
							"regexp": "^\\s*in .*\\.less \\(line (\\d+), column (\\d+)\\)$",
							"line": 1,
							"column": 2
						},
						{
							"regexp": "^ @ (.+\\.less)",
							"file": 1
						}
					]
				}
			]
		},
		{
			"label": "watch",
			"command": "npm",
			"type": "shell",
			"args": [
				"run",
				"watch"
			],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				{
					"owner": "typescript",
					"fileLocation": "relative",
					"pattern": [
						{
							"regexp": "^.*\\sin\\s(.*)$",
							"file": 1
						},
						{
							"regexp": "^\\((\\d+),(\\d+)\\):\\s(.*)\\s(.*):\\s(.*)$",
							"line": 1,
							"column": 2,
							"severity": 3,
							"code": 4,
							"message": 5
						}
					],
					"background": {
						"activeOnStart": true,
						"endsPattern": "modules?$",
						"beginsPattern": "\\%\\d+"
					}
				},
				{
					"owner": "less",
					"fileLocation": "relative",
					"pattern": [
						{
							"regexp": "^.*$",
							"message": 0
						},
						{
							"regexp": "^\\s*in .*\\.less \\(line (\\d+), column (\\d+)\\)$",
							"line": 1,
							"column": 2
						},
						{
							"regexp": "^ @ (.+\\.less)",
							"file": 1
						}
					],
					"background": {
						"activeOnStart": true,
						"endsPattern": "modules?$",
						"beginsPattern": "^\\s{1,2}\\d+%$"
					}
				}
			]
		},
		{
			"type": "npm",
			"script": "release",
			"problemMatcher": [
				{
					"owner": "typescript",
					"fileLocation": "relative",
					"pattern": [
						{
							"regexp": "^.*\\sin\\s(.*)$",
							"file": 1
						},
						{
							"regexp": "^\\((\\d+),(\\d+)\\):\\s(.*)\\s(.*):\\s(.*)$",
							"line": 1,
							"column": 2,
							"severity": 3,
							"code": 4,
							"message": 5
						}
					]
				},
				{
					"owner": "less",
					"fileLocation": "relative",
					"pattern": [
						{
							"regexp": "^.*$",
							"message": 0
						},
						{
							"regexp": "^\\s*in .*\\.less \\(line (\\d+), column (\\d+)\\)$",
							"line": 1,
							"column": 2
						},
						{
							"regexp": "^ @ (.+\\.less)",
							"file": 1
						}
					]
				}
			]
		},
		{
			"type": "npm",
			"script": "build",
			"isBackground": true,
			"group": "build",
			"problemMatcher": [
				{
					"owner": "typescript",
					"source": "typescript",
					"fileLocation": "absolute",
					"applyTo": "allDocuments",
					"pattern": [
						{
							"regexp": "^(ERROR) in .*$",
							"severity": 1
						},
						{
							"regexp": "^\\[tsl\\] ERROR in (.+\\.ts)\\((\\d+),(\\d+)\\)$",
							"file": 1,
							"line": 2,
							"column": 3
						},
						{
							"regexp": "^(TS\\d{4}): (.*)$",
							"code": 1,
							"message": 2
						}
					]
				}
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true
			// "problemMatcher": [{
			// 		"owner": "typescript",
			// 		"source": "typescript",
			// 		"fileLocation": "absolute",
			// 		"applyTo": "allDocuments",
			// 		"pattern": [
			// 			{
			// 				"regexp": "^(ERROR) in .*$",
			// 				"severity": 1
			// 			},
			// 			{
			// 				"regexp": "^\\[tsl\\] ERROR in (.+\\.ts)\\((\\d+),(\\d+)\\)$",
			// 				"file": 1,
			// 				"line": 2,
			// 				"column": 3
			// 			},
			// 			{
			// 				"regexp": "^(TS\\d{4}): (.*)$",
			// 				"code": 1,
			// 				"message": 2
			// 			}
			// 		],
			// 		"background": {
			// 			"activeOnStart": false,
			// 			"beginsPattern": "^\\d+%",
			// 			"endsPattern": "^Child html-webpack-plugin for \\\"index.html\\\":$"
			// 		}
			// 	}]
		}
	],
}